#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main() {

	int x, y, dot;

	printf("점의 좌표(x, y)? ");
	scanf("%d %d", &x, &y);

	if (x < 0 && y > 0) {
		dot = 2;
	}
	else if (x > 0 && y > 0) {
		dot = 1;
	}
	else if (x < 0 && y < 0) {
		dot = 3;
	}
	else {
		dot = 4;
	}

	printf("%d분면에 있습니다.", dot);

	return 0;
}
